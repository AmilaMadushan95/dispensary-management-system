<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.employeemanagement.controllers.PayrollController">
    <center>
        <AnchorPane id="AnchorPane" prefHeight="715.0" prefWidth="1299.0">

        </AnchorPane>
    </center>
    <left>
        <VBox fx:id="aside" alignment="CENTER" prefHeight="715.0" prefWidth="280.0" styleClass="aside-background" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
            <children>
                <JFXButton fx:id="dashBoardBtn" alignment="TOP_LEFT" onMouseClicked="#changeScene" prefHeight="100.0" prefWidth="250.0" text="DashBoard" textFill="WHITE">
                    <font>
                        <Font size="20.0" />
                    </font>
                    <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="HOME" size="70" />
                    </graphic>
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </JFXButton>
                <JFXButton fx:id="addEmployeeBtn" alignment="TOP_LEFT" onMouseClicked="#changeScene" prefHeight="100.0" prefWidth="250.0" text="Add Employee" textFill="WHITE">
                    <font>
                        <Font size="20.0" />
                    </font>
                    <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="USER_PLUS" size="70" />
                    </graphic>
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </JFXButton>
                <JFXButton fx:id="updateEmployeeBtn" alignment="TOP_LEFT" onMouseClicked="#changeScene" prefHeight="100.0" prefWidth="250.0" text="Update Employee" textFill="WHITE">
                    <font>
                        <Font size="20.0" />
                    </font>
                    <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="USER" size="70" />
                    </graphic>
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </JFXButton>
                <JFXButton fx:id="attendenceBtn" alignment="TOP_LEFT" onMouseClicked="#changeScene" prefHeight="100.0" prefWidth="250.0" text="Attendence" textFill="WHITE">
                    <font>
                        <Font size="20.0" />
                    </font>
                    <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="CHILD" size="70" />
                    </graphic>
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </JFXButton>
                <JFXButton fx:id="payrollBtn" alignment="TOP_LEFT" onMouseClicked="#changeScene" prefHeight="100.0" prefWidth="250.0" text="Payroll" textFill="WHITE">
                    <font>
                        <Font size="20.0" />
                    </font>
                    <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="CC_VISA" size="70" />
                    </graphic>
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </JFXButton>
                <JFXButton fx:id="reportsBtn" alignment="TOP_LEFT" onMouseClicked="#changeScene" prefHeight="100.0" prefWidth="250.0" text="Reports" textFill="WHITE">
                    <font>
                        <Font size="20.0" />
                    </font>
                    <graphic>
                        <FontAwesomeIconView fill="WHITE" glyphName="FILE_TEXT_ALT" size="70" />
                    </graphic>
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </JFXButton>
            </children>
        </VBox>

    </left>
</BorderPane>
